##
##  Makefile -- Build procedure for sample rsato Apache module
##  Autogenerated via ``apxs -n rsato -g''.
##
BASE_INCLUDES_=apreq2 httpd/apreq2
THIRD_PARTY_INCLUDES_=/usr/include/glib-2.0 /usr/lib64/glib-2.0/include/
LIB_NAMES_=stdc++ curl glib-2.0


builddir=.
top_srcdir=/etc/httpd
top_builddir=/usr/lib64/httpd
include /usr/lib64/httpd/build/special.mk

#   additional defines, includes and libraries
INCLUDES=-I../include $(addprefix -I/usr/include/,$(BASE_INCLUDES_))  $(addprefix -I,$(THIRD_PARTY_INCLUDES_))
LIBS=-L/usr/local/lib $(addprefix -l,$(LIB_NAMES_))

CXX="g++"
CXXFLAGS+=-std=c++1y -Wextra -MMD

APACHECTL=apachectl
#   the default target
all: local-shared-build
#   install the shared object file into Apache
install: install-modules-yes

clean:
	-rm -f *.so *.o *.slo *.la *.d

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload:	install restart

start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop
